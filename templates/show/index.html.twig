{% extends 'base.html.twig' %}

{% block title %}Liste des Shows{% endblock %}

{% block body %}

<h1 class="display-1 my-5">Liste des {{ ressource }}</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Slug</th>
            <th>Title</th>
            <th>Poster_url</th>
            <th>Bookable</th>
            <th>Price</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.slug }}</td>
                <td>{{ show.title }}</td>
                <td>{{ show.posterUrl }}</td>
                <td class="bookable-cell" data-ref="{{ show.id }}">{{ show.bookable ? 'Yes' : 'No' }}</td>
                <td><span style="font-weight: bold;">{{show.price}} $</span></td>
                <td>
                    <a href="{{ path('show_show', {'id': show.id}) }}" class="btn btn-info">show</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('show_edit', {'id': show.id}) }}">edit</a>
                    {{ include('show/_delete_form.html.twig') }}
                {% endif %}    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
</table>

{% endblock %}
