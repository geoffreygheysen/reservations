{% extends 'base.html.twig' %}

{% block title %}Liste des Agent{% endblock %}

{% block body %}

<h1>liste des {{ ressource }}</h1>

<table class="table">
    <thead>
        <tr>
            <th>Agent</th>
            <th>Artists</th>
        </tr>
    </thead>
    <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{agent.name}}</td>
                <td>
                    <ul>
                    {% for artist in agent.artists %}
                        <li>{{artist.firstname}} {{artist.lastname}}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
