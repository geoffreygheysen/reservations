                            {% if not app.user %}

                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('security_login') }}">Connexion</a>
                            </li>
                            {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('security_logout') }}">Déconnexion</a>
                            </li>
                            {% endif %}
                        </ul>
                        
                    </div>
                </nav>

        <div class="container">

        <h1>connexion</h1>

        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input placeholder="Email" required name="_username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>

    </div>

{% endblock %}
